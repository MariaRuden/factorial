using System;

{
    class Program
    {
        static void Main(string[] args)
        {
            Console.Write("p = ");
            ulong p = Convert.ToUInt32(Console.ReadLine());
            ulong i = p;
            ulong factorial = 1;
            do
            {
                factorial = factorial * i;
                --i;
            }
            while (i > 1);

            Console.WriteLine($"{p}! = {factorial}");

            Console.ReadLine();
        }
    
